<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation ="vertical"
    android:padding="10dp"
    >



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abort"
        android:id="@+id/dialog_btAbortItemAmountChange"
        android:layout_below="@+id/dialog_btConfirmItemAmountChange"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/dialog_btConfirmItemAmountChange" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change amount"
        android:id="@+id/dialog_btConfirmItemAmountChange"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dialog_txtNewItemAmount"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|none"
        android:digits="0123456789"
        android:ems="5"
        android:id="@+id/dialog_txtNewItemAmount"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/dialog_btConfirmItemAmountChange" />


</RelativeLayout>