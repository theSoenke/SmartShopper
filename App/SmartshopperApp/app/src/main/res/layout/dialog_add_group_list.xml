<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation ="vertical"
    android:padding="10dp"
    >

    <Button
        android:id="@+id/dialog_btCreateGroupList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create List"
        android:layout_below="@+id/dialog_txtGroupListName"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abort"
        android:id="@+id/btAbortAddGroupList"
        android:layout_below="@+id/dialog_txtGroupListName"
        android:layout_alignEnd="@+id/dialog_txtGroupListName"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/dialog_txtGroupListName"
        android:layout_below="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:text="Name of the list to add:"
        android:id="@+id/textView6"/>

</RelativeLayout>